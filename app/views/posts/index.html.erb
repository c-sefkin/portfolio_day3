

<h1>Blog Posts</h1>
<% if user_signed_in? %>
  <% if current_user.admin? %>
    <%= link_to 'New Post', new_post_path %>
  <% end %>
<% end %>
<hr>


    <% @posts.each do |post| %>

      <ul style="list-style-type: none"><h4><%= link_to post.title, post_path(post) %></h4>
        <li><span class="text_type">Author:</span>  <%= post.author %></li>
        <li><span class="text_type">Created:</span>  <%= post.created_at %></li>
        <li><%= post.body %></li>
        <li><%= link_to "View Comments", post_comments_path(post) %></li>
      </ul>
      <% if user_signed_in? %>
        <% if current_user.admin? %>
          <%= link_to 'Show', post %> |
          <%= link_to 'Edit', edit_post_path(post) %> |
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      <% end %>
      <br>
      <hr>
      <br>
    <% end %>


<br>
