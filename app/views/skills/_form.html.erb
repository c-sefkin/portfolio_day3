<%= render 'layouts/errors', :object => @skill %>

<%= form_for @skill do |f| %>
  <%= f.label :name %>  <br>
  <%= f.text_field :name %>
  <br>  <br>
  <%= f.label :description %>  <br>
  <%= f.text_field :description %>
  <br>  <br>
  <%= f.label :experience %>
  <br>
  <%= f.text_area :experience, size: '50x6'%>
  <br>  <br>
  <%= f.submit %>
<% end %>
